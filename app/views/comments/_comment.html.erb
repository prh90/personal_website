<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper(comment.user) %>
        </div>

        <div class="col-md-10" id="l_name">
          Comment posted by: <span class="name"><%= comment.user.first_name %></span> - <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
        </div>

      </div>
      <hr>
      <div class="row">
        <div class="col-md-12" id="content">
          <%= comment.content %>
        </div>
      </div>
    </div>
  </div>
</div>
