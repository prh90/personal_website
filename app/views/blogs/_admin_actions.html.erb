<% if logged_in?(:site_admin) %>
  <nav class="breadcrumb blogcrumb">
    <%= link_to fa_icon('file-text'), toggle_status_blog_path(blog), title: 'Status: '+blog.status , style: blog_status_color(blog) %>
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog), title: 'Edit' %>
    <%= link_to fa_icon('trash-o'), blog, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %>
  </nav>
<% end %>
