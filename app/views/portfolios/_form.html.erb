  <%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a Main image file <%= form.file_field :main_image, style: "display:none" %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-warning">
          Upload a Thumb image file <%= form.file_field :thumb_image, style: "display:none" %>
        </label>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <div class="col-md-12">
      <h2>Technologies Used:</h2>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
        <div class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: 'form-control' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container save-btn">
    <div class="form-group">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
